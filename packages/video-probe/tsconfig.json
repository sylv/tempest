{
  "extends": "@atlasbot/configs/tsconfig/esm.json",
  "include": ["src", "../parsers/src/macros"],
  "compilerOptions": {
    "outDir": "dist",
    "noUncheckedIndexedAccess": false,
    "types": ["vitest/importMeta", "@types/node"],

    // Bun options
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "bundler"
  }
}
